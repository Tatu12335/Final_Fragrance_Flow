<Window x:Class="Fragrance_Flow_WPF_.fragranceflow.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fragrance_Flow_WPF_.fragranceflow"
        mc:Ignorable="d"
        Title="AdminPanel" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="1" x:Name="welcome" Content="Welcome" HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold"/>
        <Button Grid.Column="1" Grid.Row="1" x:Name="BtnBanUser" Height="22" Width="100" Click="BtnBanUser_Click" Content="Ban"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderBrush="AliceBlue"/>
        <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" x:Name="ButtonUnban" 
                Height="22" Width="100" Content="Unban" Margin="0,0,0,-90" Click="ButtonUnban_Click" BorderBrush="AliceBlue" />
        <ListBox x:Name="ListBox2" Grid.Column="0" Grid.Row="1" DisplayMemberPath="FullUserInfo">
        </ListBox>
        <Button Content="🔁" FontSize="30" Margin="83,0,134,67" HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center" Click="Button_Click" Width="50" Height="50"/>

    </Grid>
</Window>
